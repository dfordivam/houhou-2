name:                dbinterface
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/dfordivam/dbinterface#readme
author:              Divam Narula
maintainer:          dfordivam@gmail.com
copyright:           All rights reserved
category:            web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

library
  exposed-modules:   DBInterface
  -- other-modules:
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , StandaloneDeriving
                     , TypeSynonymInstances
                     , FlexibleInstances
                     , TypeFamilies
                     , DeriveGeneric
                     , UndecidableInstances

  build-depends:       base >= 4.7 && < 5
                     , protolude
                     , beam-core
                     , sqlite-simple
                     , beam-sqlite
                     , aeson
                     , lens
                     , dbmodel
                     , containers
                     , text
                     , bytestring-trie
